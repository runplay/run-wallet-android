<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="15dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/neighbour_head"
            android:padding="4dp"

            >
            <TextView
                android:id="@+id/item_neighbor_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/blackAlpha50"
                android:singleLine="true"
                android:paddingLeft="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:id="@+id/item_neighbor_connection_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:background="@color/blackAlpha50"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_neighbor_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="16dp"
                android:src="@drawable/menu_neighbors"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="6dp">
                    <TextView
                        android:id="@+id/item_neighbor_number_of_invalid_transactions"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textColorSecondary"
                        android:drawableLeft="@drawable/tran_red"
                        />

                    <TextView
                        android:id="@+id/item_neighbor_number_of_new_transactions"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textColorSecondary"
                        android:drawableLeft="@drawable/tran_orange"
                        />

                    <TextView
                        android:id="@+id/item_neighbor_number_of_sent_transactions"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textColorSecondary"
                        android:drawableLeft="@drawable/tran_green"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">
                    <TextView
                        android:id="@+id/item_neighbor_number_of_all_transactions"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textColorSecondary"
                        android:drawableLeft="@drawable/navigation_refresh"/>

                    <TextView
                        android:id="@+id/item_neighbor_number_of_random_transaction_request"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textColorSecondary"
                        android:alpha="0"
                        android:drawableLeft="@drawable/tran_primary_dark"/>
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</FrameLayout>