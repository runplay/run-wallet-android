<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="contentDescription">
    <LinearLayout
        android:id="@+id/item_node_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_node_protocol"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:background="@color/blackAlpha50"
                        android:layout_margin="3dp"
                        android:padding="3dp" />
                    <TextView
                        android:id="@+id/item_node_address"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        tools:text="27.27.27.27" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text=" : "
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="?android:textColorPrimary"
                        />
                    <TextView
                        android:id="@+id/item_node_port"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="8080"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_node_extras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/menu_neighbors"
                        />
                    <ImageView
                        android:id="@+id/item_node_status"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/node_off"
                        />
                    <TextView
                        android:id="@+id/item_node_last_date"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        tools:text="24/02/1999 00:00:00" />
                    <TextView
                        android:id="@+id/item_node_status_last_count"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        tools:text="-20"
                        />
                    <ImageView
                        android:id="@+id/item_node_status_last"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/node_off"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</FrameLayout>