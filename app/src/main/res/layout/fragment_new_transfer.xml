<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/colorLight"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/new_transfer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/fragment_new_transfer_title" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/new_transfer_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="100dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_transfer_summary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_margin="1dp"
                    android:alpha="0.5"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/baseline_small">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="4dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">
                                <TextView
                                    android:text="@string/transfer_available"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/new_transfer_available_balance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/logo_green"
                                    android:drawablePadding="12dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                >
                                <TextView
                                    android:id="@+id/pig_locked"
                                    android:text="@string/transfer_pig_lock"
                                    android:drawablePadding="6dp"
                                    android:alpha="0.4"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:drawableLeft="@drawable/pig"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/new_transfer_pending_balance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:paddingLeft="20dp"
                                    android:alpha="0.6"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:paddingBottom="2dp"
                    >
                    <LinearLayout
                        android:paddingStart="@dimen/baseline_card"
                        android:paddingEnd="@dimen/baseline_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/new_transfer_import_warn"
                            android:drawableStart="@drawable/ic_error"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:id="@+id/new_transfer_extras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:gravity="end">
                            <Button
                                android:id="@+id/new_transfer_add_tag"
                                android:text="@string/card_label_tag"
                                android:background="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                style="@style/AppButtonWhite"
                                android:paddingEnd="@dimen/baseline_card"
                                android:paddingStart="@dimen/baseline_card"
                                android:layout_marginEnd="@dimen/baseline_card"
                                android:layout_marginStart="@dimen/baseline_card"
                                android:layout_width="50dp"
                                android:layout_height="30dp" />
                            <ImageButton
                                android:id="@+id/new_transfer_add_message"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:src="@drawable/message"
                                style="@style/AppButtonWhite"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/white"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                android:paddingEnd="@dimen/baseline_card"
                                android:paddingStart="@dimen/baseline_card"
                                />
                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:id="@+id/new_transfer_show_multi_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="@string/pay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingEnd="12dp"
                                    android:paddingStart="3dp"/>
                                <TextView
                                    android:id="@+id/new_transfer_sub_value"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                    android:textStyle="bold"
                                    android:paddingRight="2dp"
                                    android:text="0"
                                    android:textColor="@color/green"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/new_transfer_sub_third"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:paddingRight="6dp"
                                    android:alpha="0.7"
                                    android:textColor="@color/green"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/new_transfer_sub_unit"
                                    android:layout_width="wrap_content"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                    android:textStyle="bold"
                                    android:text="i"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:src="@drawable/iota_name"
                                    android:layout_gravity="center"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <!--  Message Label -->
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/new_transfer_message_text_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/baseline_typo"
                            android:visibility="gone"
                            app:hintTextAppearance="@style/TextLabel">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/new_transfer_message_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="500"
                                android:hint="@string/message_optional"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:inputType="textMultiLine|text"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "/>
                        </android.support.design.widget.TextInputLayout>

                        <!--  Tag Label -->
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/new_transfer_tag_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginEnd="100dp"
                            app:hintTextAppearance="@style/TextLabel">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/new_transfer_tag_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/tag_optional"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:maxLength="27"
                                android:inputType="textNoSuggestions"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ9"  />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:id="@+id/new_transfer_address_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/baseline_small"
                            >

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingLeft="0dp"
                    android:paddingRight="10dp"
                    android:layout_margin="2dp"
                    android:id="@+id/new_transfer_add_address_pod"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/baseline_typo">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/new_transfer_add"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:alpha="0.5"
                                android:enabled="false"
                                android:text="+"
                                style="@style/AppButton"
                                android:textColor="@android:color/white" />
                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/new_transfer_value_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_marginStart="12dp"
                                android:alpha="0.2"
                                android:padding="3dp"
                                android:src="@drawable/check_green" />
                            <Spinner
                                android:id="@+id/new_transfer_units_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textStyle="bold"
                                style="@style/SpinnerIota"
                                />
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/new_transfer_amount_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:hint="0"
                                android:maxLength="16"
                                android:gravity="end"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:inputType="numberSigned" />

                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/new_transfer_address_text_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            app:errorEnabled="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/new_transfer_address_confirm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:alpha="0.2"
                                    android:padding="3dp"
                                    android:src="@drawable/check_green" />
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/new_transfer_address_input"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/address"
                                    android:layout_gravity="bottom"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ9 \n,.\t"
                                    android:maxLength="90"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:inputType="textNoSuggestions"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <ImageButton
                                    android:id="@+id/new_transfer_keyboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:src="@drawable/keyboard_white"/>
                                <Space
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent" />
                                <Button
                                    android:id="@+id/new_transfer_clear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/clear"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    style="@style/AppButtonWhite"
                                    android:drawableRight="@drawable/clear"
                                    />
                                <Button
                                    android:id="@+id/new_transfer_paste"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/paste"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    style="@style/AppButtonWhite"
                                    android:drawableRight="@drawable/paste"
                                    />
                                <Button
                                    android:id="@+id/new_transfer_get_qr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/qr"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    style="@style/AppButtonWhite"
                                    android:drawableRight="@drawable/ic_fab_qr"
                                    />

                            </LinearLayout>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingLeft="0dp"
                    android:paddingRight="10dp"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:id="@+id/new_transfer_show_details"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/baseline_typo">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@color/colorMiddle"
                            android:padding="2dp"
                            android:paddingBottom="@dimen/baseline_small">
                            <TextView
                                android:text="@string/from"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/new_transfer_seed_name"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:background="@color/colorSecondary"
                                        android:textColor="@color/white"
                                        android:paddingLeft="3dp"
                                        android:paddingRight="3dp"
                                        />
                                    <TextView
                                        android:id="@+id/new_transfer_seed_quip"
                                        android:layout_width="0dp"
                                        android:layout_weight="4"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/baseline_typo"/>
                                </LinearLayout>
                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:id="@+id/new_transfer_from_addresses"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:orientation="horizontal"
                                        android:paddingTop="3dp"
                                        >

                                    </LinearLayout>
                                </HorizontalScrollView>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/remainder_pod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/colorLight"
                            android:padding="2dp">
                            <TextView
                                android:text="@string/remainder"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:id="@+id/new_transfer_remainder_address"
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp">

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:id="@+id/new_transfer_instruct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/new_transfer_add_pod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLight"
            >
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/new_transfer_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:padding="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                style="@style/AppButton"
                android:text="@string/next"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/new_transfer_details_pod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLight"
            >
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/new_transfer_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/baseline_card"
                android:alpha="0.7"
                android:padding="3dp"
                android:paddingStart="@dimen/baseline_card"
                android:gravity="start|center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawableStart="@drawable/edit"
                android:text="@string/edit"
                style="@style/AppButton"
                android:textColor="@android:color/white" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/new_transfer_pay_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/pay_now"
                android:drawableEnd="@drawable/send_white"
                style="@style/AppButton"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>