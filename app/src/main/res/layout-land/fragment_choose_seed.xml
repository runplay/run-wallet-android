<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorSecondary">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/choose_seed_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/menu_choose_wallet" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/default_seed_info_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-50dp"
                android:padding="0dp"

                />
            <TextView
                android:id="@+id/chart_vol"
                android:text="@string/volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="52dp"
                android:textColor="@color/colorLight"
                android:alpha="0.4"
                />
            <TextView
                android:id="@+id/chart_price"
                android:text="@string/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:paddingBottom="160dp"
                android:alpha="0.4"
                />
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:alpha="50"
                android:layout_alignParentRight="true"
                android:gravity="top"
                android:orientation="vertical"
                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/xchange_list_currencies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        >
                        <TextView
                            android:id="@+id/xchange_5m"
                            android:text="5m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDarkAlpha"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="6dp"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/xchange_15m"
                            android:text="15m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDarkAlpha"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="6dp"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/xchange_30m"
                            android:text="30m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDarkAlpha"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="6dp"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/xchange_1h"
                            android:text="1hr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDarkAlpha"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="6dp"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/xchange_2h"
                            android:text="2hr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDarkAlpha"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="6dp"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingTop="6dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@color/colorPrimaryDarkAlpha"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"

                    >
                    <TextView
                        android:text="@string/xchange_last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/xchange_last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/baseline_small"
                        android:paddingLeft="@dimen/baseline"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@color/colorPrimaryDarkAlpha"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    >
                    <TextView
                        android:text="@string/xchange_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/xchange_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/baseline_small"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@color/colorPrimaryDarkAlpha"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    >
                    <TextView
                        android:text="@string/xchange_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/xchange_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/baseline_small"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/flatRed"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/default_seed_click"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:alpha="0.7"
                >
                <TextView
                    android:id="@+id/default_seed_name"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/baseline_small"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/default_seed_value"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/baseline_small"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/default_seed_currency"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/baseline_small"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/wallet_addresses_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/baseline_card">

            </android.support.v7.widget.RecyclerView>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_seed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/fab_margin"
                android:padding="16dp"
                android:paddingBottom="70dp"
                android:src="@drawable/ic_add"
                app:fabSize="normal"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>

